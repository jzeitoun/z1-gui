#:kivy 1.0.9

#: set primary_color [35/255.0, 35/255.0, 34/255.0, 1]
#: set secondary_color [20/255.0, 20/255.0, 19/255.0, 1]
#: set dropdown_highlight [1, 1, 1, 0.15]
#: set match_color [61/255.0, 192/255.0, 244/255.0, 1]
#: set border_color [107/255.0, 109/255.0, 112/255.0, 0.6]
#: set text_color [1, 1, 1, 1]
#: set input_text_color [1, 1, 1, 0.6]

<Wavelength@Label>:
    font_size: 20
    border: True
    canvas.before:
        Color:
            rgba: border_color if self.border else [0,0,0,0]
        Rectangle:
            size: self.size[0] - (self.size[0]/4), 1
            pos: (self.center_x - (self.size[0] - (self.size[0]/4))/2), self.pos[1]


<DropDownButton>:
    on_pos: self.pos = tuple(map(int, args[1]))
    padding: 20, 0
    canvas.before:
        Color:
            rgba: secondary_color
        RoundedRectangle:
            radius: [5]
            pos: self.pos
            size: self.size

<DropDownOption>:
    id: base
    size_hint_y: None
    text_size: self.size[0], None
    padding: 20, 0
    Label:
        text_size: self.size[0], None
        text: base.text
    Label:
        background_color: [0,0,0,0]
        size_hint_x: 0.05
        Image:
            source: base.image_source
            width: self.parent.width - (self.parent.width/2)
            height: self.parent.height - (self.parent.height/2)
            x: self.parent.x + ((self.parent.width - self.width)/2)
            y: self.parent.y + ((self.parent.height - self.height)/2)
            color: [1,1,1,1] if base.image_source is not "" else [0,0,0,0]

<NewProfileInput>:
    id: base
    padding: 14, 0
    TextInput:
        id: child
        pos: self.parent.pos
        background_color: [0,0,0,0]
        multiline: False
        foreground_color: input_text_color
        cursor_color: input_text_color
        hint_text: 'Enter new profile name...'
        on_text_validate: self.text = ''



<HintButton>:
    id: base
    image_source: ""
    bubble_text: ""
    bubble_size: 80, 30
    arrow_pos: "top_mid"
    background_normal: ""
    background_down: ""
    background_color: [0,0,0,0]
    always_release: True
    on_press: icon.color = input_text_color
    canvas.before:
        Color:
            rgba: secondary_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5]
    Image:
        id: icon
        source: self.parent.image_source
        width: self.parent.width - (self.parent.width/3)
        height: self.parent.height - (self.parent.height/3)
        x: self.parent.x + ((self.parent.width - self.width)/2)
        y: self.parent.y + ((self.parent.height - self.height)/2)
        color: text_color
    Bubble:
        id: bubble
        opacity: 0
        background_image: ""
        arrow_image: "custom_bubble_arrow.png"
        background_color: [0, 0, 0, 1]
        size: base.bubble_size
        center_x: base.center_x
        center_y: base.center_y - self.height/2
        arrow_pos: base.arrow_pos
        Label:
            id: bubble_label
            bold: True
            text: base.bubble_text
            font_size: "12"
            halign: "center"

<OffsetInput>:
    orientation: 'horizontal'
    padding: 10, 0

    TextInput:
        text: str(root.value)
        background_color: secondary_color
        foreground_color: input_text_color
        cursor_color: input_text_color
        multiline: False
        on_text_validate: root.value = float(self.text)

    BoxLayout:
        size_hint_x: 0.2
        orientation: 'vertical'
        on_pos: self.pos = tuple(map(int, args[1]))

        Button:
            background_color: [0,0,0,0]
            always_release: True
            on_press: root.start_press('self.increment')
            on_release: root.end_press()
            Image:
                source: "arrow_sans_up.png"
                width: self.parent.width - (self.parent.width/3)
                height: self.parent.height - (self.parent.height/3)
                x: self.parent.x + ((self.parent.width - self.width)/2)
                y: self.parent.y + ((self.parent.height - self.height)/2)
                color: text_color
        Button:
            background_color: [0,0,0,0]
            always_release: True
            on_press: root.start_press('self.decrement')
            on_release: root.end_press()
            Image:
                source: "arrow_sans_down.png"
                width: self.parent.width - (self.parent.width/3)
                height: self.parent.height - (self.parent.height/3)
                x: self.parent.x + ((self.parent.width - self.width)/2)
                y: self.parent.y + ((self.parent.height - self.height)/2)
                color: text_color


<RootWidget>:
    canvas.before:
        Color:
            rgba: primary_color
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size: root.size[0], root.size[1]
        orientation: 'vertical'

        BoxLayout:
            id: profile
            size_hint_y: 0.2
            orientation: 'horizontal'
            padding: 5, 5, 5, 0

            Label:
                size_hint_x: 0.25
                text: "Profile"

            BoxLayout:
                id: dropdown_holder
                orientation: 'horizontal'
                canvas.before:
                    Color:
                        rgba: secondary_color
                    RoundedRectangle:
                        radius: [5]
                        pos: self.pos
                        size: self.size
                DropDownButton:
                    id: dropdown_button
                    on_release: root.dropdown.open(self)
                    Label:
                        id: label_1
                        text_size: self.size[0], None
                        text: root.profile_service.active_profile
                    Label:
                        background_color: [0,0,0,0]
                        size_hint_x: .05
                        text_size: self.size[0], None
                        Image:
                            source: "arrow_sans_down.png"
                            width: self.parent.width - (self.parent.width/3)
                            height: self.parent.height - (self.parent.height/3)
                            x: self.parent.x + ((self.parent.width - self.width)/2)
                            y: self.parent.y + ((self.parent.height - self.height)/2)
                            color: text_color

            BoxLayout:
                size_hint_x: 0.25
                spacing: 5
                padding: 5, 0

                HintButton:
                    id: save_button
                    image_source: "save-ai.png"
                    bubble_text: "Save Profile"
                    arrow_pos: "top_mid"
                HintButton:
                    id: apply_button
                    image_source: "apply-ai.png"
                    bubble_text: "Apply Offsets"
                    bubble_size: 90, 30
                    arrow_pos: "top_mid"
                HintButton:
                    id: directory_button
                    image_source: "folder.png"
                    bubble_text: "Select Save\n Location"
                    bubble_size: 75, 45
                    arrow_pos: "top_mid"

            BoxLayout:
                size_hint_x: 0.05
                id: spacer

        BoxLayout:
            id: headers
            size_hint_y: 0.25
            padding: 5
            orientation: 'horizontal'
            on_pos: self.pos = tuple(map(int, args[1]))
            canvas.after:
                Color:
                    rgba: border_color
                Rectangle:
                    size: root.size[0] - 50, 1
                    pos: self.pos[0] + 30, self.pos[1]

            Label:
                id: wavelength_label
                size_hint_x: 0.5
                halign: 'center'
                bold: True
                text: "Wavelength"
                text_size: self.size
                font_size: 16
                padding: 0, 0

            GridLayout:
                cols: 2
                spacing: 5

                Label:
                    halign: 'left'
                    bold: True
                    text: "Left Offset"
                    text_size: self.size
                    font_size: 16
                    padding: 10, 0
                Label:
                    halign: 'left'
                    bold: True
                    text: "Right Offset"
                    text_size: self.size
                    font_size: 16
                    padding: 10, 0

        BoxLayout:
            padding: 5, 5, 5, 10
            orientation: 'horizontal'

            BoxLayout:
                size_hint_x: 0.5
                orientation: 'vertical'

                Wavelength:
                    text: '488'
                    border: True
                Wavelength:
                    text: "405"
                    border: True
                Wavelength:
                    text: '561'
                    border: True
                Wavelength
                    text: "638"
                    border: False

            GridLayout:
                cols: 2
                spacing: 10

                OffsetInput:
                    id: left_488
                OffsetInput:
                    id: right_488
                OffsetInput:
                    id: left_405
                OffsetInput:
                    id: right_405
                OffsetInput:
                    id: left_561
                OffsetInput:
                    id: right_561
                OffsetInput:
                    id: left_638
                OffsetInput:
                    id: right_638
